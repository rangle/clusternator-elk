{
    "containerDefinitions": [
        {
            "essential": true, 
            "name": "elasticsearch", 
            "portMappings": [
                {
                    "containerPort": 9200, 
                    "hostPort": 9200
                }
            ]
        }, 
        {
            "command": [
                "logstash", 
                "-f", 
                "/etc/logstash/conf.d/logstash.conf"
            ], 
            "essential": true, 
            "image": "logstash:latest", 
            "links": [
                "elasticsearch"
            ], 
            "mountPoints": [
                {
                    "containerPath": "/etc/logstash/conf.d", 
                    "sourceVolume": "_LogstashConfig"
                }
            ], 
            "name": "logstash", 
            "portMappings": [
                {
                    "containerPort": 5000, 
                    "hostPort": 5000
                }
            ]
        }, 
        {
            "essential": true, 
            "links": [
                "elasticsearch"
            ], 
            "mountPoints": [
                {
                    "containerPath": "/opt/kibana/config/kibana.yml", 
                    "sourceVolume": "_KibanaConfigKibana_Yml"
                }
            ], 
            "name": "kibana", 
            "portMappings": [
                {
                    "containerPort": 5601, 
                    "hostPort": 5601
                }
            ]
        }
    ], 
    "family": "", 
    "volumes": [
        {
            "host": {
                "sourcePath": "./logstash/config"
            }, 
            "name": "_LogstashConfig"
        }, 
        {
            "host": {
                "sourcePath": "./kibana/config/kibana.yml"
            }, 
            "name": "_KibanaConfigKibana_Yml"
        }
    ]
}
